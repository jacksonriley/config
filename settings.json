{
    "git.enableSmartCommit": true,
    "git.countBadge": "tracked",
    "python.linting.pycodestyleEnabled": true,
    "editor.rulers": [
        79
    ],
    // "editor.fontSize": 16,
    "breadcrumbs.enabled": true,
    "window.menuBarVisibility": "default",
    "diffEditor.renderSideBySide": false,
    "git.openDiffOnClick": false,

    // Prettier minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 50,
    "editor.minimap.showSlider": "always",
    "editor.minimap.enabled": true,

    // Better title
    "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",

    // Editor settings
    // "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderWhitespace": "none",
    "editor.copyWithSyntaxHighlighting": false,

    // Workbench settings
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Monokai Dimmed",
    // Trailing Spaces config
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.highlightCurrentLine": false,

    // Autosave
    "files.autoSave": "afterDelay",

    //autoDocstring
    "autoDocstring.customTemplatePath": "/ws/richcoop-sjc/misc/ensoft.mustache",
    "gitlens.codeLens.enabled": false,

    // Disable jedi
    // "python.jediEnabled": false,

    // Fix tagging
    "python.workspaceSymbols.ctagsPath": "/auto/smartdev/bin/ctags",
    "python.workspaceSymbols.enabled": true,
    "python.workspaceSymbols.exclusionPatterns": ["**/site-packages/**",
                                                  "**tgt-linux/**",
                                                  "**/*obj-*/**",
                                                  "**link-lindt-64/**",
                                                  "**xr-deps/**",
                                                  "**enxr-xvm/**"],
    "python.workspaceSymbols.rebuildOnFileSave": true,
    "python.workspaceSymbols.rebuildOnStart": true,
    "[python]": {
            "editor.semanticHighlighting.enabled": false
        },
    "macros": {
        "actuallyGoToFirstSymbol": [
            "ctrl+t",
            "acceptSuggestedSelectionOnEnter",
        ],
        "newBlockComment": [
            {"command": "type", "args": {"text": "/*\n\n "}},
            "cursorUp",
            {"command": "type", "args": {"text": " * "}},
            // {"command": "type", "args": {"text": "*"}},
            // "cursorDown",
            // {"command": "type", "args": {"text": "*/"}},
            // "cursorUp",
            // "deleteLeft",
            // "cursorDown",
            // "cursorRight"
        ],
    },
    "workbench.colorCustomizations": {},
    "color-highlight.markerType": "dot-before",
    "editor.acceptSuggestionOnEnter": "off",
    "terminal.integrated.copyOnSelection": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "remote.extensionKind": { "coenraads.bracket-pair-colorizer-2": "ui" },
    // Restricts the cpptools caching to 100MB
    "C_Cpp.intelliSenseCacheSize": 100,
    "python.pythonPath": "/sw/packages/xrbuild-python/3.9.2/bin/python3",
    "remote.SSH.remotePlatform": {
        "jacriley-ads": "linux",
        "ensoft-linux4": "linux",
        "elm-dev": "linux"
    },
    "files.watcherExclude": {"**/target/**": true},
    "shellcheck.executablePath": "/auto/smartdev/bin/shellcheck",
    "xr.enabled": true,
    "xr.components": [
        "infra/install"
    ],
    "python.showStartPage": false,
    "files.exclude": {
        " **/target/**": true
    },
    "workbench.panel.defaultLocation": "right",
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.editor.untitled.hint": "hidden",
    "security.workspace.trust.untrustedFiles": "open",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "rust-analyzer.server.path": "/nobackup/jacriley/rust-analyzer/target/release/rust-analyzer"
}